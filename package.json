{
  "name": "llm-copypaster",
  "displayName": "llm-copypaster",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "[https://github.com/SlavaFesenko/llm-copypaster.git](https://github.com/SlavaFesenko/llm-copypaster.git)"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:llm-copypaster.copyThisFileAsLlmContext",
    "onCommand:llm-copypaster.copyThisTabGroupAsLlmContext",
    "onCommand:llm-copypaster.copyAllOpenFilesAsLlmContext",
    "onCommand:llm-copypaster.copyPinnedFilesAsLlmContext",
    "onCommand:llm-copypaster.copyThisFileAsLlmContextWithoutTechPrompt",
    "onCommand:llm-copypaster.copyThisTabGroupAsLlmContextWithoutTechPrompt",
    "onCommand:llm-copypaster.copyAllOpenFilesAsLlmContextWithoutTechPrompt",
    "onCommand:llm-copypaster.copyPinnedFilesAsLlmContextWithoutTechPrompt",
    "onCommand:llm-copypaster.copySelectedExplorerItemsAsLlmContext",
    "onCommand:llm-copypaster.applyClipboardToFiles",
    "onCommand:llm-copypaster.validateClipboardPayload",
    "onCommand:llm-copypaster.sanitizeClipboardPayload",
    "onCommand:llm-copypaster.closeAllIncludingPinned",
    "onCommand:llm-copypaster.closeAllButPinnedInActiveTabGroup",
    "onCommand:llm-copypaster.closeAllIncludingPinnedInActiveTabGroup"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "llm-copypaster.copyThisFileAsLlmContext",
        "title": "Copy This File"
      },
      {
        "command": "llm-copypaster.copyThisTabGroupAsLlmContext",
        "title": "Copy Tab Group"
      },
      {
        "command": "llm-copypaster.copyAllOpenFilesAsLlmContext",
        "title": "Copy All Open Files"
      },
      {
        "command": "llm-copypaster.copyPinnedFilesAsLlmContext",
        "title": "Copy Pinned Files"
      },
      {
        "command": "llm-copypaster.copyThisFileAsLlmContextWithoutTechPrompt",
        "title": "Copy This File (Without Tech Prompt)"
      },
      {
        "command": "llm-copypaster.copyThisTabGroupAsLlmContextWithoutTechPrompt",
        "title": "Copy Tab Group (Without Tech Prompt)"
      },
      {
        "command": "llm-copypaster.copyAllOpenFilesAsLlmContextWithoutTechPrompt",
        "title": "Copy All Open Files (Without Tech Prompt)"
      },
      {
        "command": "llm-copypaster.copyPinnedFilesAsLlmContextWithoutTechPrompt",
        "title": "Copy Pinned Files (Without Tech Prompt)"
      },
      {
        "command": "llm-copypaster.copySelectedExplorerItemsAsLlmContext",
        "title": "Copy Selected Explorer Items"
      },
      {
        "command": "llm-copypaster.applyClipboardToFiles",
        "title": "LLM Copypaster: Apply Clipboard to Files"
      },
      {
        "command": "llm-copypaster.validateClipboardPayload",
        "title": "LLM Copypaster: Validate Clipboard Payload"
      },
      {
        "command": "llm-copypaster.sanitizeClipboardPayload",
        "title": "LLM Copypaster: Sanitize Clipboard Payload"
      },
      {
        "command": "llm-copypaster.closeAllIncludingPinned",
        "title": "Close All Including Pinned"
      },
      {
        "command": "llm-copypaster.closeAllButPinnedInActiveTabGroup",
        "title": "Close All but Pinned in ACTIVE tab group"
      },
      {
        "command": "llm-copypaster.closeAllIncludingPinnedInActiveTabGroup",
        "title": "Close All Including Pinned in ACTIVE tab group"
      }
    ],
    "submenus": [
      {
        "id": "llm-copypaster.editor",
        "label": "LLM Copypaster"
      },
      {
        "id": "llm-copypaster.explorer",
        "label": "LLM Copypaster"
      },
      {
        "id": "llm-copypaster.copyWithTechPrompt",
        "label": "Copy With Tech Prompt"
      },
      {
        "id": "llm-copypaster.copyWithoutTechPrompt",
        "label": "Copy Without Tech Prompt"
      },
      {
        "id": "llm-copypaster.closeAdvanced",
        "label": "Close Advanced"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "llm-copypaster.editor",
          "when": "resourceScheme == file",
          "group": "navigation@10"
        }
      ],
      "explorer/context": [
        {
          "submenu": "llm-copypaster.explorer",
          "when": "explorerResourceIsFolder || resourceScheme == file",
          "group": "navigation@10"
        }
      ],
      "editor/title/context": [],
      "llm-copypaster.editor": [
        {
          "submenu": "llm-copypaster.copyWithTechPrompt",
          "when": "resourceScheme == file",
          "group": "navigation@10"
        },
        {
          "submenu": "llm-copypaster.copyWithoutTechPrompt",
          "when": "resourceScheme == file",
          "group": "navigation@11"
        },
        {
          "submenu": "llm-copypaster.closeAdvanced",
          "group": "navigation@14"
        }
      ],
      "llm-copypaster.copyWithTechPrompt": [
        {
          "command": "llm-copypaster.copyThisFileAsLlmContext",
          "when": "resourceScheme == file",
          "group": "navigation@10"
        },
        {
          "command": "llm-copypaster.copyThisTabGroupAsLlmContext",
          "when": "resourceScheme == file",
          "group": "navigation@11"
        },
        {
          "command": "llm-copypaster.copyAllOpenFilesAsLlmContext",
          "when": "resourceScheme == file",
          "group": "navigation@12"
        },
        {
          "command": "llm-copypaster.copyPinnedFilesAsLlmContext",
          "when": "resourceScheme == file",
          "group": "navigation@13"
        }
      ],
      "llm-copypaster.copyWithoutTechPrompt": [
        {
          "command": "llm-copypaster.copyThisFileAsLlmContextWithoutTechPrompt",
          "when": "resourceScheme == file",
          "group": "navigation@10"
        },
        {
          "command": "llm-copypaster.copyThisTabGroupAsLlmContextWithoutTechPrompt",
          "when": "resourceScheme == file",
          "group": "navigation@11"
        },
        {
          "command": "llm-copypaster.copyAllOpenFilesAsLlmContextWithoutTechPrompt",
          "when": "resourceScheme == file",
          "group": "navigation@12"
        },
        {
          "command": "llm-copypaster.copyPinnedFilesAsLlmContextWithoutTechPrompt",
          "when": "resourceScheme == file",
          "group": "navigation@13"
        }
      ],
      "llm-copypaster.explorer": [
        {
          "command": "llm-copypaster.copySelectedExplorerItemsAsLlmContext",
          "when": "explorerResourceIsFolder || resourceScheme == file",
          "group": "navigation@10"
        }
      ],
      "llm-copypaster.closeAdvanced": [
        {
          "command": "llm-copypaster.closeAllIncludingPinnedInActiveTabGroup",
          "group": "navigation@10"
        },
        {
          "command": "llm-copypaster.closeAllButPinnedInActiveTabGroup",
          "group": "navigation@11"
        },
        {
          "command": "llm-copypaster.closeAllIncludingPinned",
          "group": "navigation@12"
        }
      ]
    },
    "keybindings": [
      {
        "command": "llm-copypaster.applyClipboardToFiles",
        "key": "alt+1",
        "when": "editorTextFocus"
      },
      {
        "command": "llm-copypaster.validateClipboardPayload",
        "key": "alt+2",
        "when": "editorTextFocus"
      },
      {
        "command": "llm-copypaster.sanitizeClipboardPayload",
        "key": "alt+3",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
