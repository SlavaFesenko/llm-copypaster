{
  "name": "llm-copypaster",
  "displayName": "llm-copypaster",
  "description": "Added Paste from Editor Feature",
  "version": "0.1.6",
  "repository": {
    "type": "git",
    "url": "[https://github.com/SlavaFesenko/llm-copypaster.git](https://github.com/SlavaFesenko/llm-copypaster.git)"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "llm-copypaster.copyThisFileAsLlmContext",
        "title": "LLM Copypaster: Copy This File"
      },
      {
        "command": "llm-copypaster.copyThisTabGroupAsLlmContext",
        "title": "LLM Copypaster: Copy Tab Group Files"
      },
      {
        "command": "llm-copypaster.copyPinnedFilesInActiveTabGroupAsLlmContext",
        "title": "Copy Tab Group Files: Only Pinned"
      },
      {
        "command": "llm-copypaster.copyAllOpenFilesAsLlmContext",
        "title": "LLM Copypaster: Copy All Files"
      },
      {
        "command": "llm-copypaster.copyAllPinnedFilesAsLlmContext",
        "title": "Copy All Files: Only Pinned"
      },
      {
        "command": "llm-copypaster.copyThisFileAsLlmContextWithoutTechPrompt",
        "title": "Copy This File (Without Prompt)"
      },
      {
        "command": "llm-copypaster.copyThisTabGroupAsLlmContextWithoutTechPrompt",
        "title": "Copy Tab Group Files (Without Prompt)"
      },
      {
        "command": "llm-copypaster.copyPinnedFilesInActiveTabGroupAsLlmContextWithoutTechPrompt",
        "title": "Copy Tab Group Files: Only Pinned (Without Prompt)"
      },
      {
        "command": "llm-copypaster.copyAllOpenFilesAsLlmContextWithoutTechPrompt",
        "title": "Copy All Files (Without Prompt)"
      },
      {
        "command": "llm-copypaster.copyAllPinnedFilesAsLlmContextWithoutTechPrompt",
        "title": "Copy All Files: Only Pinned (Without Prompt)"
      },
      {
        "command": "llm-copypaster.copySelectedExplorerItemsAsLlmContext",
        "title": "LLM Copypaster: Copy File(s)"
      },
      {
        "command": "llm-copypaster.copySelectedExplorerItemsAsLlmContextWithoutTechPrompt",
        "title": "LLM Copypaster: Copy File(s) (Without Prompt)"
      },
      {
        "command": "llm-copypaster.applyClipboardToFiles",
        "title": "LLM Copypaster: Paste Clipboard to Files"
      },
      {
        "command": "llm-copypaster.validateClipboardPayload",
        "title": "LLM Copypaster: Validate Clipboard Payload"
      },
      {
        "command": "llm-copypaster.sanitizeClipboardPayload",
        "title": "LLM Copypaster: Sanitize Clipboard Payload"
      },
      {
        "command": "llm-copypaster.closeAllIncludingPinned",
        "title": "Close All Files: Pinned & Unpinned"
      },
      {
        "command": "llm-copypaster.closeAllButPinnedInActiveTabGroup",
        "title": "Close Active Tab Group Files: Just Unpinned"
      },
      {
        "command": "llm-copypaster.closeAllIncludingPinnedInActiveTabGroup",
        "title": "Close Active Tab Group Files: Pinned & Unpinned"
      }
    ],
    "submenus": [
      {
        "id": "llm-copypaster.editor",
        "label": "LLM Copypaster: Advanced"
      },
      {
        "id": "llm-copypaster.closeAdvanced",
        "label": "Close Advanced"
      }
    ],
    "menus": {
      "editor/context": [],
      "explorer/context": [
        {
          "command": "llm-copypaster.copySelectedExplorerItemsAsLlmContext",
          "when": "explorerResourceIsFolder || resourceScheme == file",
          "group": "1-navigation@1"
        },
        {
          "command": "llm-copypaster.copySelectedExplorerItemsAsLlmContextWithoutTechPrompt",
          "when": "explorerResourceIsFolder || resourceScheme == file",
          "group": "1-navigation@2"
        },
        {
          "command": "llm-copypaster.applyClipboardToFiles",
          "when": "resourceScheme == file",
          "group": "1-navigation@3"
        }
      ],
      "editor/title/context": [
        {
          "command": "llm-copypaster.copyThisFileAsLlmContext",
          "when": "resourceScheme == file",
          "group": "0-navigation@1"
        },
        {
          "command": "llm-copypaster.copyThisTabGroupAsLlmContext",
          "when": "resourceScheme == file",
          "group": "0-navigation@2"
        },
        {
          "command": "llm-copypaster.copyAllOpenFilesAsLlmContext",
          "when": "resourceScheme == file",
          "group": "0-navigation@3"
        },
        {
          "command": "llm-copypaster.applyClipboardToFiles",
          "when": "resourceScheme == file",
          "group": "0-navigation@4"
        },
        {
          "submenu": "llm-copypaster.editor",
          "when": "resourceScheme == file",
          "group": "0-navigation@5"
        }
      ],
      "llm-copypaster.editor": [
        {
          "command": "llm-copypaster.copyPinnedFilesInActiveTabGroupAsLlmContext",
          "when": "resourceScheme == file",
          "group": "navigation@10"
        },
        {
          "command": "llm-copypaster.copyAllPinnedFilesAsLlmContext",
          "when": "resourceScheme == file",
          "group": "navigation@11"
        },
        {
          "command": "llm-copypaster.copyThisFileAsLlmContextWithoutTechPrompt",
          "when": "resourceScheme == file",
          "group": "navigation@20"
        },
        {
          "command": "llm-copypaster.copyThisTabGroupAsLlmContextWithoutTechPrompt",
          "when": "resourceScheme == file",
          "group": "navigation@21"
        },
        {
          "command": "llm-copypaster.copyPinnedFilesInActiveTabGroupAsLlmContextWithoutTechPrompt",
          "when": "resourceScheme == file",
          "group": "navigation@22"
        },
        {
          "command": "llm-copypaster.copyAllOpenFilesAsLlmContextWithoutTechPrompt",
          "when": "resourceScheme == file",
          "group": "navigation@23"
        },
        {
          "command": "llm-copypaster.copyAllPinnedFilesAsLlmContextWithoutTechPrompt",
          "when": "resourceScheme == file",
          "group": "navigation@24"
        },
        {
          "submenu": "llm-copypaster.closeAdvanced",
          "group": "navigation@30"
        }
      ],
      "llm-copypaster.closeAdvanced": [
        {
          "command": "llm-copypaster.closeAllIncludingPinnedInActiveTabGroup",
          "group": "navigation@10"
        },
        {
          "command": "llm-copypaster.closeAllButPinnedInActiveTabGroup",
          "group": "navigation@11"
        },
        {
          "command": "llm-copypaster.closeAllIncludingPinned",
          "group": "navigation@12"
        }
      ]
    },
    "keybindings": [
      {
        "command": "llm-copypaster.applyClipboardToFiles",
        "key": "alt+1",
        "when": "editorTextFocus"
      },
      {
        "command": "llm-copypaster.validateClipboardPayload",
        "key": "alt+2",
        "when": "editorTextFocus"
      },
      {
        "command": "llm-copypaster.sanitizeClipboardPayload",
        "key": "alt+3",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
