{
  "name": "llm-copypaster",
  "displayName": "llm-copypaster",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "llm-copypaster.helloWorld",
        "title": "LLM Copypaster: Hello World"
      },
      {
        "command": "llm-copypaster.applyClipboardToFiles",
        "title": "LLM Copypaster: Apply Clipboard to Files"
      },
      {
        "command": "llm-copypaster.validateClipboardPayload",
        "title": "LLM Copypaster: Validate Clipboard Payload"
      },
      {
        "command": "llm-copypaster.sanitizeClipboardPayload",
        "title": "LLM Copypaster: Sanitize Clipboard Payload"
      }
    ],
    "keybindings": [
      {
        "command": "llm-copypaster.applyClipboardToFiles",
        "key": "alt+1",
        "when": "editorTextFocus"
      },
      {
        "command": "llm-copypaster.validateClipboardPayload",
        "key": "alt+2",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
