{
  "name": "llm-copypaster",
  "displayName": "llm-copypaster",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "[https://github.com/SlavaFesenko/llm-copypaster.git](https://github.com/SlavaFesenko/llm-copypaster.git)"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:llm-copypaster.copyThisFileAsLlmContext",
    "onCommand:llm-copypaster.copyThisTabGroupAsLlmContext",
    "onCommand:llm-copypaster.copyAllOpenFilesAsLlmContext",
    "onCommand:llm-copypaster.copySelectedExplorerItemsAsLlmContext",
    "onCommand:llm-copypaster.applyClipboardToFiles",
    "onCommand:llm-copypaster.validateClipboardPayload",
    "onCommand:llm-copypaster.sanitizeClipboardPayload"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "llm-copypaster.copyThisFileAsLlmContext",
        "title": "LLM Copypaster: Copy This File as LLM Context"
      },
      {
        "command": "llm-copypaster.copyThisTabGroupAsLlmContext",
        "title": "LLM Copypaster: Copy This Tab Group as LLM Context"
      },
      {
        "command": "llm-copypaster.copyAllOpenFilesAsLlmContext",
        "title": "LLM Copypaster: Copy All Open Files as LLM Context"
      },
      {
        "command": "llm-copypaster.copySelectedExplorerItemsAsLlmContext",
        "title": "LLM Copypaster: Copy Selected Explorer Items as LLM Context"
      },
      {
        "command": "llm-copypaster.applyClipboardToFiles",
        "title": "LLM Copypaster: Apply Clipboard to Files"
      },
      {
        "command": "llm-copypaster.validateClipboardPayload",
        "title": "LLM Copypaster: Validate Clipboard Payload"
      },
      {
        "command": "llm-copypaster.sanitizeClipboardPayload",
        "title": "LLM Copypaster: Sanitize Clipboard Payload"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "llm-copypaster.copyThisFileAsLlmContext",
          "when": "resourceScheme == file",
          "group": "navigation@10"
        },
        {
          "command": "llm-copypaster.copyAllOpenFilesAsLlmContext",
          "when": "resourceScheme == file",
          "group": "navigation@12"
        },
        {
          "command": "llm-copypaster.copyThisTabGroupAsLlmContext",
          "when": "resourceScheme == file",
          "group": "navigation@11"
        }
      ],
      "explorer/context": [
        {
          "command": "llm-copypaster.copySelectedExplorerItemsAsLlmContext",
          "when": "explorerResourceIsFolder || resourceScheme == file",
          "group": "navigation@10"
        }
      ]
    },
    "keybindings": [
      {
        "command": "llm-copypaster.applyClipboardToFiles",
        "key": "alt+1",
        "when": "editorTextFocus"
      },
      {
        "command": "llm-copypaster.validateClipboardPayload",
        "key": "alt+2",
        "when": "editorTextFocus"
      },
      {
        "command": "llm-copypaster.sanitizeClipboardPayload",
        "key": "alt+3",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
